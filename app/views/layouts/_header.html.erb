<header style="background: #2c3e50; color: #fff; padding: 16px 0; margin-bottom: 30px; font-family: Arial, sans-serif;">
  <div style="max-width: 900px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between;">
    <div style="font-size: 1.5em; font-weight: bold; letter-spacing: 1px;">
      Pet Watch
    </div>
    <% if user_signed_in? %>
      <div style="display: flex; align-items: center;">
        <span style="margin-right: 18px;">Welcome, <%= current_user.email %></span>
        <%= button_to 'Log Out', logout_path, method: :delete, form: { style: 'display: inline;' }, style: 'background: #c0392b; color: #fff; border: none; border-radius: 5px; padding: 6px 16px; margin-left: 10px;' %>
      </div>
    <% end %>
  </div>
</header> 